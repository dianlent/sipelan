# Application
NEXT_PUBLIC_APP_NAME=SIPelan
NEXT_PUBLIC_APP_URL=http://localhost:5000

# Supabase Database (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Email Notification (OPTIONAL - for sending email to pelapor)
# If not configured, email will only be logged to console
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_or_api_key
SMTP_FROM="SIPelan" <noreply@sipelan.go.id>

# Email Examples:
# Gmail: smtp.gmail.com, port 587, secure=false
# Outlook: smtp-mail.outlook.com, port 587, secure=false
# SendGrid: smtp.sendgrid.net, port 587, secure=false
# AWS SES: email-smtp.region.amazonaws.com, port 587, secure=false

# JWT Secret (for authentication - optional if using Supabase Auth)
JWT_SECRET=your_secret_key_here_minimum_32_characters

# Node Environment
NODE_ENV=development