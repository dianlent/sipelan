# Production Environment Configuration
# SIPELAN - Sistem Pengaduan Layanan Naker

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://username:password@localhost:5432/sipelan_production"

# ============================================
# JWT AUTHENTICATION
# ============================================
# IMPORTANT: Generate a strong secret key for production
# Use: openssl rand -base64 32
JWT_SECRET="CHANGE_THIS_TO_STRONG_SECRET_KEY_IN_PRODUCTION"

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="noreply@sipelan.patikab.go.id"
SMTP_PASS="your-app-password-here"
SMTP_FROM="SIPELAN Disnaker Pati <noreply@sipelan.patikab.go.id>"

# ============================================
# APPLICATION URLs
# ============================================
NEXT_PUBLIC_APP_URL="https://sipelan.patikab.go.id"
NEXT_PUBLIC_API_URL="https://sipelan.patikab.go.id/api"

# ============================================
# FILE UPLOAD
# ============================================
MAX_FILE_SIZE="5242880"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/jpg,application/pdf"
UPLOAD_DIR="./public/uploads"

# ============================================
# SECURITY
# ============================================
NODE_ENV="production"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# ============================================
# LOGGING
# ============================================
LOG_LEVEL="error"
ENABLE_REQUEST_LOGGING="true"

# ============================================
# ADMIN DEFAULT (First Setup Only)
# ============================================
DEFAULT_ADMIN_EMAIL="admin@sipelan.patikab.go.id"
DEFAULT_ADMIN_PASSWORD="ChangeThisPassword123!"
DEFAULT_ADMIN_NAME="Administrator SIPELAN"
DEFAULT_ADMIN_NIP="198501012010011001"
